<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SmS_Send.SendSmSFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/item_board"
            android:scaleType="fitCenter"
            android:src="@drawable/send_sms" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/item_board"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtSetReceNumber"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/item_board"
                android:gravity="left|center"
                android:inputType="numberDecimal|textNoSuggestions"
                android:text="010-4697-3907"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txtSetReceName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/item_board"
                android:gravity="left|center"
                android:inputType="textPersonName|textNoSuggestions"
                android:text="이경훈"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp" />

        </LinearLayout>
        <Button
            android:id="@+id/btSend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="문자 전송"
            />
        <Button
            android:id="@+id/checkbt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="문자 확인"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/edSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보낼문자메시지"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/txtlogSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="size"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_resent_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:padding="1dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/sub_resend_log_view"

        />

</LinearLayout>